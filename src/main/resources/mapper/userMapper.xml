<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ch.dao.UserDao">
    <insert id="insert" parameterType="UserDto">
        INSERT INTO user_info
        VALUES (#{id}, #{pwd}, #{name}, #{nickname}, #{number}, #{email}, #{addr_num}, #{addr_area},
                #{addr_detail}, #{admin}, now());
    </insert>

    <delete id="deleteAll">
        delete
        from user_info
    </delete>

    <delete id="delete" parameterType="String">
        DELETE
        FROM user_info
        WHERE id = #{id}
    </delete>

    <select id="count" resultType="int">
        select count(*)
        from user_info
    </select>

    <select id="select" parameterType="String" resultType="UserDto">
        SELECT *
        FROM user_info
        WHERE id = #{id};
    </select>

    <update id="update" parameterType="UserDto">
        UPDATE user_info
        SET pwd     = #{pwd},
            nickname= #{nickname},
            email= #{email}
        WHERE id = #{id}
    </update>


    <!--회원가입: 아이디 중복검사 -->
    <select id="idCheck" resultType="int">
        select count(*)
        from user_info
        where id = #{id}
    </select>

    <select id="nicknameCheck" resultType="int">
        select count(*)
        from user_info
        where nickname = #{nickname}
    </select>

    <select id="emailCheck" resultType="int">
        select count(*)
        from user_info
        where email = #{email}
    </select>

    <select id="numberCheck" resultType="int">
        select count(*)
        from user_info
        where number = #{number}
    </select>

</mapper>
